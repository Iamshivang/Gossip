<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.authentication.loginScreen.LoginFragment">

    <RelativeLayout
        android:id="@+id/containerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="36dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="36dp">

        <TextView
            android:id="@+id/tv_login_title"
            style="@style/LabelStyle"
            android:fontFamily="@font/sf_pro_display_medium"
            android:text="LOGIN"
            android:layout_centerHorizontal="true"
            android:textColor="@color/shade3" />


        <ImageView
            android:id="@+id/iv_gossip"
            android:layout_width="250dp"
            android:layout_height="180dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tv_login_title"
            android:scaleType="centerInside"
            android:src="@drawable/people"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_email"
            style="@style/EditTextStyle"
            android:layout_below="@id/iv_gossip"
            android:layout_marginTop="15dp"
            android:hint="Email"
            android:textColor="@color/primary"
            android:inputType="textEmailAddress" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_pass"
            style="@style/EditTextStyle"
            android:layout_below="@id/et_email"
            android:layout_marginTop="15dp"
            android:hint="Password"
            android:textColor="@color/primary"
            android:inputType="textPassword" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_login"
            style="@style/SolidButtonStyle"
            android:layout_width="match_parent"
            android:layout_below="@id/et_pass"
            android:layout_marginTop="25dp"
            android:background="@drawable/solid_bg_grd_purple"
            android:text="Login"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="22dp" />


        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/btn_login"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:indeterminate="true"
            android:layout_marginTop="40dp"
            android:indeterminateTint="@color/primary"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RelativeLayout
            android:id="@+id/sign_up_nav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center">

            <TextView
                android:id="@+id/no_account"
                style="@style/LabelStyle"
                android:fontFamily="@font/sf_pro_display_medium"
                android:text="@string/no_account"
                android:textColor="@color/account"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/sign_up"
                style="@style/LabelStyle"
                android:layout_toEndOf="@id/no_account"
                android:fontFamily="@font/sf_pro_display_medium"
                android:onClick="signup"
                android:text=" Signup"
                android:textColor="@color/primary"
                android:textSize="16sp" />
        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>